---
import { Footer } from "~/components/docs/footer";
import { Header } from "~/components/docs/header";
import { Logo } from "~/components/docs/logo";
import { Navigation } from "~/components/docs/navigation";

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="h-full">
  <body class="flex min-h-full bg-white antialiased dark:bg-zinc-900">
    <div class="w-full">
      <div class="h-full lg:ml-72 xl:ml-80">
        <div
          class="contents lg:pointer-events-none lg:fixed lg:inset-0 lg:z-40 lg:flex"
        >
          <div
            class="contents lg:pointer-events-auto lg:block lg:w-72 lg:overflow-y-auto lg:border-r lg:border-zinc-900/10 lg:px-6 lg:pb-8 lg:pt-4 xl:w-80 lg:dark:border-white/10"
          >
            <div class="hidden lg:flex">
              <a href="/" aria-label="Home">
                <Logo className="h-6" />
              </a>
            </div>
            <Header client:load currentPath={currentPath} />
            <Navigation
              className="hidden lg:mt-10 lg:block"
              currentPath={currentPath}
            />
          </div>
        </div>
        <div class="relative flex h-full flex-col px-4 pt-14 sm:px-6 lg:px-8">
          <main class="flex-auto prose dark:prose-invert pt-8">
            <slot />
          </main>
          <Footer />
        </div>
      </div>
    </div>
  </body>
</html>
